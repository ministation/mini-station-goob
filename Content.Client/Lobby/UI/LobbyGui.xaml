<lobbyUi:LobbyGui
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maths="clr-namespace:Robust.Shared.Maths;assembly=Robust.Shared.Maths"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:vote="clr-namespace:Content.Client.Voting.UI"
    xmlns:lobbyUi="clr-namespace:Content.Client.Lobby.UI"
    xmlns:info="clr-namespace:Content.Client.Info"
    xmlns:widgets="clr-namespace:Content.Client.UserInterface.Systems.Chat.Widgets"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:parallax="clr-namespace:Content.Client.Parallax"
    xmlns:changelog="clr-namespace:Content.Client.Changelog"
    xmlns:style="clr-namespace:Content.Client.Stylesheets">

<TextureRect Access="Public" VerticalExpand="True" Visible="True" HorizontalExpand="True" Name="Background"
             Stretch="KeepAspectCovered" TexturePath="/Textures/LobbyScreens" />
    <BoxContainer Name="MainContainer" VerticalExpand="True" HorizontalExpand="True" Orientation="Horizontal" Margin="10 10 10 10">
        <!-- Character setup state -->
        <Control Access="Public" Visible="False" Name="CharacterSetupState" VerticalExpand="True" HorizontalExpand="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <SplitContainer Name="SplitContainer" State="Auto" ResizeMode="NotResizable" HorizontalExpand="True" Orientation="Vertical">
            <!-- Top Side -->
            <BoxContainer Name="TopSide" Orientation="Vertical" HorizontalAlignment="Stretch" HorizontalExpand="True" VerticalExpand="False" VerticalAlignment="Top">
                <controls:StripeBack>
                    <PanelContainer Name="TopPanel" MinWidth="400" StyleClasses="LobbyBackground" HorizontalExpand="True" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <BoxContainer Orientation="Vertical" HorizontalExpand="True" HorizontalAlignment="Stretch" Margin="8 8 8 8">
                            <BoxContainer Orientation="Horizontal" MinSize="0 40" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Name="Rules" Text="{Loc 'server-info-rules-button'}" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <Button Name="Guidebook" Text="{Loc 'server-info-guidebook-button'}" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <changelog:ChangelogButton Name="Changelog" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <Button Name="Wiki" Text="{Loc 'server-info-wiki-button'}" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <controls:VSpacer Spacing="25"/>
                                <TextureRect TextureScale="0.2 0.2" Stretch="KeepCentered" TexturePath="/Textures/Interface/main_logo.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <controls:VSpacer Spacing="25"/>
                                <Button Name="Boosty" Text="Бусти" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <Button Name="Discord" Text="Дискорд" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <Button Name="Telegram" Text="Телеграмм" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                                <Button Name="AHelpButton" Access="Public" Text="{Loc 'ui-lobby-ahelp-button'}" MinSize="125 10" VerticalAlignment="Center" HorizontalAlignment="Center" StyleClasses="ButtonBig"/>
                            </BoxContainer>
                        </BoxContainer>
                    </PanelContainer>
                </controls:StripeBack>
                <BoxContainer Orientation="Vertical" SeparationOverride="4" Name="VoteContainer" Access="Public" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 8"/>
            </BoxContainer>

            <!-- Bottom Side -->
            <PanelContainer Name="BottomContainer" StyleClasses="LobbyBackground" MinHeight="300" HorizontalExpand="True" VerticalExpand="True">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <!-- Left Panel -->
                    <PanelContainer Name="LeftSide" MinWidth="400" StyleClasses="LobbyBackground" HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <BoxContainer Name="DefaultState" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="8 8 8 8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <!-- Верхняя часть левой панели -->
                            <BoxContainer Name="TopLeft" Orientation="Vertical" HorizontalExpand="True" VerticalAlignment="Top">
                                <PanelContainer StyleClasses="AngleRect" HorizontalAlignment="Stretch" Name="LeftSideTop" VerticalAlignment="Top" HorizontalExpand="True">
                                    <BoxContainer Orientation="Vertical" HorizontalAlignment="Center" MaxWidth="800" HorizontalExpand="True">
                                        <info:LinkBanner Name="LinkBanner" VerticalExpand="false" HorizontalAlignment="Center" Margin="3 3 3 3" />
                                        <controls:StripeBack HorizontalExpand="True">
                                            <BoxContainer Orientation="Horizontal" SeparationOverride="6" Margin="3 3 3 3" HorizontalExpand="True">
                                                <Label Name="StartTime"
                                                       Access="Public"
                                                       Align="Center"
                                                       FontColorOverride="{x:Static maths:Color.DarkGray}"
                                                       StyleClasses="LabelBig" HorizontalExpand="True" HorizontalAlignment="Center"/>
                                            </BoxContainer>
                                        </controls:StripeBack>
                                        <RichTextLabel Name="PlaytimeComment" Visible="False" Access="Public" HorizontalAlignment="Center" />
                                    </BoxContainer>
                                </PanelContainer>
                            </BoxContainer>

                            <!-- Server info -->
                            <controls:NanoHeading Text="{Loc 'ui-lobby-server-info-block'}" HorizontalAlignment="Left"/>
                            <info:ServerInfo Name="ServerInfo" Access="Public" MinSize="0 30" VerticalExpand="True"
                                             Margin="3 3 3 3" MaxWidth="400" HorizontalAlignment="Stretch" HorizontalExpand="True"/>
                            <Label Name="StationTime" Access="Public" FontColorOverride="{x:Static maths:Color.LightGray}"
                                   Margin="3 3 3 3" HorizontalAlignment="Left"/>

                            <!-- Server Currency -->
                            <Label Name="Balance" Access="Public" StyleClasses="LabelHeadingBigger" VAlign="Center"
                                   HorizontalExpand="True" HorizontalAlignment="Center" />

                            <!-- Lobby Message -->
                            <PanelContainer VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
                                            Margin="0 75" StyleClasses="AngleRect" HorizontalExpand="True">
                                <RichTextLabel Name="LobbyMessageLabel" Access="Public" Margin="5" HorizontalAlignment="Center"/>
                            </PanelContainer>
                        </BoxContainer>
                    </PanelContainer>

                    <!-- Center Panel -->
                    <PanelContainer Name="CenterPanel" StyleClasses="LobbyBackground" MinWidth="400" HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <lobbyUi:LobbyCharacterPreviewPanel Name="CharacterPreview" Access="Public" Visible="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Name="ReadyButton" Access="Public" ToggleMode="True" Text="{Loc 'ui-lobby-ready-up-button'}" VerticalAlignment="Center" HorizontalAlignment="Center" MinSize="250 50" StyleClasses="ButtonBig"/>
                            <cc:UICommandButton Command="observe" Name="ObserveButton" Access="Public" Text="{Loc 'ui-lobby-observe-button'}" StyleClasses="ButtonBig" WindowType="{x:Type lobbyUi:ObserveWarningWindow}" VerticalAlignment="Center" HorizontalAlignment="Center" MinSize="250 50"/>
                            <Button Name="CharacterSetup" Access="Public" Text="{Loc 'lobby-character-preview-panel-character-setup-button'}" VerticalAlignment="Center" HorizontalAlignment="Center" MinSize="250 50" StyleClasses="ButtonBig"/>
                            <Button Name="OptionsButton" Access="Public" Text="{Loc 'ui-lobby-options-button'}" VerticalAlignment="Center" HorizontalAlignment="Center" MinSize="250 50" StyleClasses="ButtonBig"/>
                            <Button Name="AuthorizationDiscordButton" Access="Public" Text="Авторизация" MinSize="250 50"/>
                            <Button Name="LeaveButton" Access="Public" Text="{Loc 'ui-lobby-leave-button'}" VerticalAlignment="Center" HorizontalAlignment="Center" MinSize="250 50" StyleClasses="ButtonBig"/>
                        </BoxContainer>
                    </PanelContainer>

                    <!-- Right Panel - Chat -->
                    <PanelContainer Name="RightSide" Access="Public" StyleClasses="LobbyBackground" HorizontalAlignment="Stretch" VerticalExpand="True"
                                    VerticalAlignment="Stretch" HorizontalExpand="True">
                        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
                            <widgets:ChatBox Name="Chat" Access="Public" MinWidth="360" VerticalExpand="True" Margin="3 3 3 3" HorizontalExpand="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </BoxContainer>
                    </PanelContainer>
                </BoxContainer>
            </PanelContainer>
        </SplitContainer>
    </BoxContainer>
</lobbyUi:LobbyGui>
